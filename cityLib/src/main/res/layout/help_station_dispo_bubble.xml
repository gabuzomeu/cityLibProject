<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/help_station_page1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:orientation="vertical" >

        <TextView
            style="@style/help_text"
            android:text="@string/help_tab_bubbledispo_desc" />

        <LinearLayout
            android:id="@+id/help_station_dispobubble_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/help_bubbledispo_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@android:drawable/btn_star"
                    android:checked="false"
                    android:enabled="false" />

                <TextView
                    style="@style/help_text"
                    android:text="@string/help_tab_bubbledispo_favory" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/help_bubbledispo_favorite_longclick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@android:drawable/btn_star"
                    android:checked="true"
                    android:enabled="false" />

                <TextView
                    style="@style/help_text"
                    android:paddingTop="5dp"
                    android:text="@string/help_tab_bubbledispo_favory_longclick" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/help_text"
                android:layout_marginTop="5dp"
                android:text="@string/help_tab_bubbledispo_name_longclick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/help_balloon_streetview_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="StreetView"
                android:src="@android:drawable/ic_menu_view" />

            <TextView
                style="@style/help_text"
                android:text="@string/help_tab_bubbledispo_streetview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/help_balloon_navigation_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Navigation"
                android:src="@android:drawable/ic_menu_directions" />

            <TextView
                style="@style/help_text"
                android:text="@string/help_tab_bubbledispo_navigation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/help_balloon_bonus_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/vplus" />

            <TextView
                style="@style/help_text"
                android:text="@string/help_tab_bubbledispo_bonus" />
        </LinearLayout>

        <!-- <fragment -->
        <!-- android:id="@+id/fragment_station_dispo_bubble" -->
        <!-- android:name="eu.ttbox.velib.ui.admob.AdmobFragment" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" /> -->

        <include
            android:id="@+id/admob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/admob" />
        
    </LinearLayout>

</ScrollView>